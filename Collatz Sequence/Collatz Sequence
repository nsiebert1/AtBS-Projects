def collatz(number):
        if number % 2 == 0:
            print(number // 2)
            return number // 2
        else:
            print(3 * number + 1)
            return 3 * number + 1

print('Type an integer: ', end='')

try:
    input = int(input())

    while input != 1:
        numberint = collatz(input)
        input = numberint

except ValueError:
        print('You must enter an integer.')